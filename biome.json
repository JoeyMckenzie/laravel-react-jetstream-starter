{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"indentStyle": "space",
		"ignore": [
			"./resources/js/ssr.tsx"
		]
	},
	"linter": {
		"enabled": true,
		"ignore": [
			"./resources/js/ssr.tsx",
			"./resources/js/components/ui/*.tsx",
			"./resources/js/components/ui/*.ts"
		],
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"options": {
						"functions": [
							"clsx",
							"cn"
						]
					}
				}
			}
		}
	}
}
